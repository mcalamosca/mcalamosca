{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "singleProjectMode": true
  },
  "hosting": [
    {
      "target": "davide-sauce",
      "public": "dist/apps/davide-sauce",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "forest-bjorn",
      "public": "dist/apps/forest-bjorn",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
