{
  "name": "davide-sauce",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "ds",
  "sourceRoot": "apps/davide-sauce/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/davide-sauce",
        "index": "apps/davide-sauce/src/index.html",
        "browser": "apps/davide-sauce/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/davide-sauce/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/davide-sauce/src/favicon.ico",
          "apps/davide-sauce/src/assets",
          {
            "glob": "**/*",
            "input": "libs/ui-components/src/assets/icons",
            "output": "/assets"
          }
        ],
        "styles": ["apps/davide-sauce/src/styles.scss", "apps/davide-sauce/src/themes.scss"],
        "scripts": [],
        "baseHref": "https://www.davidesauce.com/"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "optimization": true,
          "extractLicenses": true,
          "sourceMap": false,
          "aot": true
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "davide-sauce:build:production"
        },
        "development": {
          "buildTarget": "davide-sauce:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "davide-sauce:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/davide-sauce/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "davide-sauce:build:production",
        "staticFilePath": "dist/apps/davide-sauce/browser"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          "nx run davide-sauce:build:production",
          "node --trace-warnings ./tools/sitemap.js --domain=https://www.davidesauce.com --routes=../apps/davide-sauce/src/app/app.routes.ts --out=../dist/apps/davide-sauce/browser",
          "gsutil rsync -r -d dist/apps/davide-sauce/browser/ gs://davide-sauce-fe"
        ],
        "parallel": false
      }
    }
  }
}
